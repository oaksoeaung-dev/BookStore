@{
    ViewData["Title"] = "Create Category";
}
@model Category

<form method="post">
    <div class="container">
        <h4 class="mb-3">Create Category</h4>
        <div class="row g-3">
            <div class="col-12">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label class="form-label" asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control"/>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-danger w-100">Cancel</a>
            </div>
            <div class="col-6">
                <button type="submit" class="btn btn-dark w-100">Create</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
